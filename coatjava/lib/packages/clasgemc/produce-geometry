#!/bin/bash

SCRIPTDIR=`dirname $0`
CLAS12DIR=`dirname $0`/../../.. ; export CLAS12DIR 
CLARA_SERVICES=$CLAS12DIR/lib/services ; export CLARA_SERVICES

#JYTHONPATH=${DATAMINING}/lib/jython
#echo ${JYTHONPATH}

#--------------------------------------------------------------
# Adding supporting COAT jar files
for i in `ls -a $CLAS12DIR/lib/clas/*.jar`
do  
echo "$i"
if [ -z "${JYPATH}" ] ; then
JYPATH="$i"
else
JYPATH=${JYPATH}:"$i"
fi
done 
#--------------------------------------------------------------
# Adding supporting plugins directory
for i in `ls -a $CLAS12DIR/lib/plugins/*.jar`
do
if [ -z "${JYPATH}" ] ; then
JYPATH="$i"
else
JYPATH=${JYPATH}:"$i"
fi
done
#--------------------------------------------------------------
# Done loading plugins
#--------------------------------------------------------------
# Adding supporting plugins directory 
for i in `ls -a $CLAS12DIR/lib/misc/*.jar`
do
if [ -z "${JYPATH}" ] ; then
JYPATH="$i"
else
JYPATH=${JYPATH}:"$i"
fi
done
#-------------------------------------------------------------
JYPATH=${JYPATH}:${SCRIPTDIR}/detector/clasgemc.jar
echo "*****************************************"
echo "*    Running COAT-JAVA Groovy Scripts   *" 
echo "*****************************************"
echo " "
JAVA_OPTS="-Dsun.java2d.pmoffscreen=false"; export JAVA_OPTS
groovy -cp "$JYPATH:g4volume" $*
